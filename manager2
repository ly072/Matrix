#include<iostream>
#include<string>
#include "Windows.h"
using namespace std;


int sum=0;
int average_sum = 0;
float average_score = 0;
int true_stu=0;



struct student
{
	string name;
	string ID;
	float score;
};

int main()
{
	student a[35];
	a[0].name = "Sam";
	a[0].ID = "CST17001";
	
	a[1].name = "LY";
	a[1].ID = "CST17002";
	a[2].name = "Teacher";
	a[2].ID = "CST17003";
	a[3].name = "WTH";
	a[3].ID = "CST17004";
	a[4].name = "kenianyi";
	a[4].ID = "CST17005";
	a[5].name = "wahaha";
	a[5].ID = "CST17006";

	HANDLE handle = GetStdHandle(STD_OUTPUT_HANDLE);
	SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_GREEN);
	cout << "程序开始运行！！！";
	SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_BLUE | FOREGROUND_GREEN | FOREGROUND_RED);
	cout << endl;
	cout << endl; cout << endl;


	cout << endl;
	for (int i = 0; i < 30; i++)
	{
		SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_GREEN);

		
		cout << "学生" << i << "的姓名为:";
		cout << a[i].name<<endl;
		cout << "学生" << i << "的学号为:";
		cout << a[i].ID << endl;
		cout << "现在请输入学生的成绩：";
		SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_BLUE | FOREGROUND_GREEN | FOREGROUND_RED);
		float judge ;
		cin >> judge;

		if (judge < 0)
			break;
		a[i].score = judge;
		true_stu++;


		
	}
	for (int i = 0; i < true_stu; i++)
	{
		average_score += a[i].score;
	}//统计总分

	average_score /= true_stu;//平均分
	SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_GREEN);
	
	
	cout << "学生的平均分为" <<average_score<< endl;
	SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_BLUE | FOREGROUND_GREEN | FOREGROUND_RED);

	while (true)
	{
		SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_GREEN);

		
		cout << "***********************"<<endl<<endl;
		cout << "输入完毕，现在请输入您要查询的数值。"<<endl;
		cout << "输入1查询不及格人数和名单" << endl;
		SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_BLUE | FOREGROUND_GREEN | FOREGROUND_RED);
		int cases;
		cin >> cases;
		if (cases == 1)//第一种情况，统计不及格人数
		{
			for (int i = 0; i < true_stu; i++)
			{
				if (a[i].score < 60)
				{	
					sum++;
					cout << "这是不及格的" << a[i].name << "他的分数是" << a[i].score<<endl;
				}
					

			}
		}
		else if (cases == 2)//第二种情况，统计大于平均分的人的人数
		{
			for (int i = 0; i < true_stu; i++)
			{
				if (a[i].score >=average_score)
				{	
					average_sum++;
					cout << "这是超过平均分的" << a[i].name << "他的分数是" << a[i].score<<endl;
				}
					

			}

		}
		else if (cases == 3)//第三种情况，统计段内人数
		{
			cout << endl;
			cout << endl;
			cout << "您要查询的是第几段呢？请输入";
			int cut = 0;
			cin >> cut;
			if (cut == 0)
			{
				int stu_cut = 0;
				for (int i = 0; i < true_stu; i++)
				{
					if (0<a[i].score<60 )
					{
						stu_cut++;
						cout << "这是段内的" << a[i].name << "他的分数是" << a[i].score << endl;
					}


				}
				cout << "段内的人数为" << stu_cut << endl;
			}
			if (cut == 1)
			{
				int stu_cut = 0;
				for (int i = 0; i < true_stu; i++)
				{
					if (60<=a[i].score<=69)
					{
						stu_cut++;
						cout << "这是段内的" << a[i].name << "他的分数是" << a[i].score << endl;
					}


				}
				cout << "段内的人数为" << stu_cut << endl;
			}
			if (cut == 2)
			{
				int stu_cut = 0;
				for (int i = 0; i < true_stu; i++)
				{
					if (70<=a[i].score<=79)
					{
						stu_cut++;
						cout << "这是段内的" << a[i].name << "他的分数是" << a[i].score << endl;
					}


				}
				cout << "段内的人数为" << stu_cut << endl;
			}
			if (cut == 3)
			{
				int stu_cut = 0;
				for (int i = 0; i < true_stu; i++)
				{
					if (80<=a[i].score<=89)
					{
						stu_cut++;
						cout << "这是段内的" << a[i].name << "他的分数是" << a[i].score << endl;
					}


				}
				cout << "段内的人数为" << stu_cut << endl;
			}
			if (cut == 4)
			{
				int stu_cut = 0;
				for (int i = 0; i < true_stu; i++)
				{
					if (90<=a[i].score<=99)
					{
						stu_cut++;
						cout << "这是段内的" << a[i].name << "他的分数是" << a[i].score << endl;
					}


				}
				cout << "段内的人数为" << stu_cut << endl;
			}
			if (cut == 5)
			{
				int stu_cut = 0;
				for (int i = 0; i < true_stu; i++)
				{
					if (a[i].score==100)
					{
						stu_cut++;
						cout << "这是段内的" << a[i].name << "他的分数是" << a[i].score << endl;
					}


				}
				cout << "段内的人数为" << stu_cut << endl;
			}
			if (cut<0 || cut>5)
			{
				SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_RED);
							cout << "输出越界！！" << endl;
							SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_BLUE | FOREGROUND_GREEN | FOREGROUND_RED);
			}
				
			



		}
		else
		{
			SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_RED);
			cout << "输出越界！！" << endl;
			SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_BLUE | FOREGROUND_GREEN | FOREGROUND_RED);
		}
		cout << endl;
	SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_RED| FOREGROUND_GREEN );
	cout << "程序回到了选择界面！请选择！" << endl;
	SetConsoleTextAttribute(handle, FOREGROUND_INTENSITY | FOREGROUND_BLUE | FOREGROUND_GREEN | FOREGROUND_RED);
	}

	



}
